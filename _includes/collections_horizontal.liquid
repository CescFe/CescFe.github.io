<div class="col mb-4">
  <a href="{% if collection.redirect %}{{ collection.redirect }}{% else %}{{ collection.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if collection.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=collection.img sizes="(min-width: 768px) 156px, 50vw" alt="collection thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if collection.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ collection.title }}</h3>
            <p class="card-text">{{ collection.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if collection.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ collection.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if collection.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ collection.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
