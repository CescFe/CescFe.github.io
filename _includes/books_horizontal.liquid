<div class="col mb-4">
  <a href="{% if book.redirect %}{{ book.redirect }}{% else %}{{ book.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if book.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=book.img sizes="(min-width: 768px) 156px, 50vw" alt="book thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if book.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ book.title }}</h3>
            <p class="card-text">{{ book.description }}</p>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
